---
import { type CollectionEntry, getCollection } from 'astro:content';
import Post from '../../layouts/Post.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

---

<Post {...post.data}>

  <h1 class="page-name">{post.data.title}</h1>

  <div class="page-intro">
    <p class="lead">
       {post.data.description}
    </p>
  </div>

  <div class="page-content">
    <Content />
    <hr>
    <p><small class="text-demphasise"><i>Written by {post.data.author} and published on <FormattedDate date={post.data.pubDate} /></i>. 
      <a href="#" title="Copy to clipboard" data-share-link>Share this post</a> with someone or <a href="/blog">read more</a>.</small></p>
  </div>

</Post>

<script>
  const shareLink = document.querySelector('[data-share-link]');

  if (shareLink) {
    const originalLabel = shareLink.textContent;

    shareLink.addEventListener('click', async (event) => {
      event.preventDefault();

      const url = window.location.href;
      let clipboardWriteSucceeded = false;

      if (navigator.clipboard?.writeText) {
        try {
          await navigator.clipboard.writeText(url);
          clipboardWriteSucceeded = true;
        } catch {
          clipboardWriteSucceeded = false;
        }
      }

      if (!clipboardWriteSucceeded) {
        // Fallback: show a prompt so the user can manually copy.
        window.prompt('Copy this link:', url);
      }

      if (clipboardWriteSucceeded) {
        shareLink.textContent = '[Thanks for sharing]';
        window.setTimeout(() => {
          shareLink.textContent = originalLabel;
        }, 2000);
      }
    });
  }
</script>
